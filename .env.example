# API Server
PORT=4000
NODE_ENV=development

# Database (SQLite for dev, PostgreSQL for production)
# For SQLite: file:./apps/api/prisma/dev.db
# For PostgreSQL: postgresql://user:password@localhost:5432/game_tracker
DATABASE_URL=file:./apps/api/prisma/dev.db

# JWT
JWT_SECRET=your-secret-key-change-this-in-production

# Steam API
# Get your key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your-steam-web-api-key

# Steam OpenID (for login)
STEAM_OPENID_REALM=http://localhost:4000

# IGDB API (optional, for game metadata)
IGDB_CLIENT_ID=your-igdb-client-id
IGDB_CLIENT_SECRET=your-igdb-client-secret

# Web Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
